}

test_pair_different_types() = {
  result = makePair(1, "hello")
  assert("Pair different types", result == (1, "hello"))
}

# Generic first/second
first((a, _)) = a
second((_, b)) = b

test_first_second() = {
  p = (42, "world")
  assert("First/Second", first(p) == 42 && second(p) == "world")
}

# =============================================================================
# 4. HIGHER-ORDER FUNCTION TYPE INFERENCE
# =============================================================================

myMap(f, []) = []
myMap(f, [x | xs]) = [f(x) | myMap(f, xs)]

test_map_int_to_int() = {
  result = myMap((x) => x * 2, [1, 2, 3])
  assert("Map Int -> Int", result == [2, 4, 6])
}

test_map_int_to_string() = {
  result = myMap((x) => show(x), [1, 2, 3])
  assert("Map Int -> String", result == ["1", "2", "3"])
}

test_map_string_to_string() = {
  # Test mapping strings to strings (concatenation)
  result = myMap((s) => s ++ "!", ["a", "b", "c"])
  assert("Map String -> String", result == ["a!", "b!", "c!"])
}

myFilter(_, []) = []
myFilter(pred, [x | xs]) = {
  if pred(x) then
    [x | myFilter(pred, xs)]
  else
    myFilter(pred, xs)
}

test_filter() = {
  result = myFilter((x) => x > 2, [1, 2, 3, 4, 5])
  assert("Filter", result == [3, 4, 5])
}

myFold(_, acc, []) = acc
myFold(f, acc, [x | xs]) = myFold(f, f(acc, x), xs)

test_fold_sum() = {
  result = myFold((a, b) => a + b, 0, [1, 2, 3, 4, 5])
  assert("Fold sum", result == 15)
}

test_fold_concat() = {
  result = myFold((a, b) => a ++ b, "", ["a", "b", "c"])
  assert("Fold concat", result == "abc")
}


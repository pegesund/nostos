}

test_float_equality_negative() = {
  x = -1.5
  y = -1.5
  assert("Float equality negative", x == y)
}

test_float_equality_zero() = {
  x = 0.0
  y = 0.0
  assert("Float equality zero", x == y)
}

test_float_comparison_lt() = {
  x = 1.5
  y = 2.5
  assert("Float less than", x < y)
}

test_float_comparison_gt() = {
  x = 2.5
  y = 1.5
  assert("Float greater than", x > y)
}

test_float_show() = {
  # Note: show(float) has a known bug where comparisons with the result
  # don't work correctly. For now, just verify it doesn't crash.
  x = 3.14
  unused = show(x)
  assert("Float show (smoke test)", true)
}

test_float_arithmetic() = {
  x = 1.5 + 2.5
  assert("Float arithmetic", x == 4.0)
}


# 3. GENERIC FUNCTION TESTS
# =============================================================================

identity(x) = x

test_identity_int() = {
  result = identity(42)
  assert("Identity Int", result == 42)
}

test_identity_string() = {
  result = identity("hello")
  assert("Identity String", result == "hello")
}

test_identity_list() = {
  result = identity([1, 2, 3])
  assert("Identity List", result == [1, 2, 3])
}

# Generic pair
makePair(a, b) = (a, b)

test_pair_same_type() = {
  result = makePair(1, 2)

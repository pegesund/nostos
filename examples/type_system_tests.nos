  ((a, b), (c, d)) = t
  assert("Nested tuple destructure", a == 1 && d == 4)
}

test_tuple_in_list() = {
  xs = [(1, "a"), (2, "b"), (3, "c")]
  result = myMap((p) => first(p), xs)
  assert("Tuple in list", result == [1, 2, 3])
}

# =============================================================================
# 6. OPTION TYPE TESTS
# =============================================================================

type Option[T] = Some(T) | None

optionMap(f, Some(x)) = Some(f(x))
optionMap(_, None) = None

optionGetOrElse(Some(x), _) = x
optionGetOrElse(None, default) = default

test_option_some() = {
  opt = Some(42)
  result = optionGetOrElse(opt, 0)
  assert("Option Some", result == 42)
}

test_option_none() = {
  opt = None
  result = optionGetOrElse(opt, 99)
  assert("Option None", result == 99)
}

test_option_map_some() = {
  opt = Some(10)
  result = optionMap((x) => x * 2, opt)
  assert("Option map Some", result == Some(20))
}

test_option_map_none() = {
  opt = None
  result = optionMap((x) => x * 2, opt)
  assert("Option map None", result == None)
}

test_option_nested() = {
  opt = Some(Some(42))
  result = optionGetOrElse(optionGetOrElse(opt, None), 0)
  assert("Nested Option", result == 42)
}

# =============================================================================
# 7. RESULT TYPE TESTS
# =============================================================================

type Result[T, E] = Ok(T) | Err(E)

resultMap(f, Ok(x)) = Ok(f(x))
resultMap(_, Err(e)) = Err(e)

resultFlatMap(f, Ok(x)) = f(x)
resultFlatMap(_, Err(e)) = Err(e)

test_result_ok() = {
  r = Ok(42)
  result = resultMap((x) => x + 1, r)
  assert("Result Ok map", result == Ok(43))
}

test_result_err() = {
  r = Err("error")
  result = resultMap((x) => x + 1, r)
  assert("Result Err map", result == Err("error"))
}

# Helper functions for Result tests
safeDivide(a, b) = {
  if b == 0 then
    Err("division by zero")
  else
    Ok(a / b)
}

resultAddOne(x) = Ok(x + 1)
resultDouble(x) = Ok(x * 2)

test_result_flatmap() = {
  result = resultFlatMap((x) => safeDivide(x, 2), Ok(10))
  assert("Result flatMap", result == Ok(5))
}

test_result_chain() = {
  result = resultFlatMap(resultDouble, resultFlatMap(resultAddOne, Ok(5)))
  assert("Result chain", result == Ok(12))
}

# =============================================================================
# 8. PATTERN MATCHING TYPE TESTS
# =============================================================================

type Shape = Circle(Int) | Rectangle(Int, Int) | Square(Int)

area(Circle(r)) = r * r * 3  # Approximate
area(Rectangle(w, h)) = w * h
area(Square(s)) = s * s

test_pattern_circle() = {
  c = Circle(2)
  a = area(c)
  assert("Pattern match Circle", a == 12)  # 2*2*3 = 12
}

test_pattern_rectangle() = {
  r = Rectangle(3, 4)
  a = area(r)
  assert("Pattern match Rectangle", a == 12)
}

type Expr = Num(Int) | Add(Expr, Expr) | Mul(Expr, Expr)

eval(Num(n)) = n
eval(Add(a, b)) = eval(a) + eval(b)
eval(Mul(a, b)) = eval(a) * eval(b)

test_recursive_variant() = {
  # (2 + 3) * 4
  expr = Mul(Add(Num(2), Num(3)), Num(4))
  result = eval(expr)
  assert("Recursive variant eval", result == 20)
}

# =============================================================================
# 9. LIST PATTERN MATCHING
# =============================================================================

myHead([]) = None
myHead([x | _]) = Some(x)

myTail([]) = None
myTail([_ | xs]) = Some(xs)

myLength([]) = 0
myLength([_ | xs]) = 1 + myLength(xs)

test_head() = {
  result = myHead([1, 2, 3])
  assert("Head of list", result == Some(1))
}

test_head_empty() = {
  result = myHead([])
  assert("Head of empty list", result == None)
}

test_tail() = {
  result = myTail([1, 2, 3])
  assert("Tail of list", result == Some([2, 3]))
}

test_length() = {
  result = myLength([1, 2, 3, 4, 5])
  assert("Length of list", result == 5)
}

# Multiple element pattern
sumFirst3([a, b, c | _]) = a + b + c
sumFirst3(_) = 0

test_multi_element_pattern() = {
  result = sumFirst3([1, 2, 3, 4, 5])
  assert("Multi-element pattern", result == 6)
}


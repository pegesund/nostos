test_tuple_2() = {
  t = (1, "hello")
  assert("Tuple 2-element", first(t) == 1)
}

test_tuple_3() = {
  t = (1, 2.0, "three")
  (a, b, c) = t
  assert("Tuple 3-element destructure", a == 1 && c == "three")
}

test_tuple_nested() = {

# Check file existence
# expect: true

main() = {
  path = "/tmp/nostos_test_file_exists.txt"

  # Make sure it doesn't exist (ignore error)
  try { { File.remove(path) } } catch { _ -> () }

  exists1 = File.exists(path)
  if exists1 then false
  else {
    # Create it
    File.writeAll(path, "test")
    exists2 = File.exists(path)
    File.remove(path)
    exists2
  }
}

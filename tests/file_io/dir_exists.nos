# Check directory existence
# expect: true

main() = {
  path = "/tmp/nostos_test_dir_exists"

  # Make sure it doesn't exist (ignore error)
  try { Dir.remove(path) } catch _ -> () end

  exists1 = Dir.exists(path)
  if exists1 then false
  else {
    # Create it
    Dir.create(path)
    exists2 = Dir.exists(path)
    Dir.remove(path)
    exists2
  }
}

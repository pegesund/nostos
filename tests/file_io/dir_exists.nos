# Check directory existence
# expect: true

main() = {
  path = "/tmp/nostos_test_dir_exists"

  # Make sure it doesn't exist
  (_, _) = Dir.remove(path)

  (status1, exists1) = Dir.exists(path)
  if status1 != "ok" then false
  else if exists1 then false
  else {
    # Create it
    (_, _) = Dir.create(path)

    (status2, exists2) = Dir.exists(path)
    (_, _) = Dir.remove(path)

    if status2 != "ok" then false
    else exists2
  }
}

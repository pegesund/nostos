# Basic file append test
# expect: true

main() = {
  path = "/tmp/nostos_test_append.txt"

  (status, _) = File.writeAll(path, "Line 1\n")
  if status != "ok" then false
  else {
    (status2, _) = File.append(path, "Line 2\n")
    if status2 != "ok" then false
    else {
      (status3, data) = File.readAll(path)
      if status3 != "ok" then false
      else {
        (_, _) = File.remove(path)
        data == "Line 1\nLine 2\n"
      }
    }
  }
}

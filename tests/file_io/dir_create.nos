# Basic directory create test
# expect: true

main() = {
  path = "/tmp/nostos_test_dir_create"

  # Clean up first
  (_, _) = Dir.remove(path)

  (status, _) = Dir.create(path)
  if status != "ok" then false
  else {
    (status2, exists) = Dir.exists(path)
    (_, _) = Dir.remove(path)

    if status2 != "ok" then false
    else exists
  }
}

# File handle read line
# expect: true

main() = {
  path = "/tmp/nostos_test_handle_readline.txt"

  File.writeAll(path, "Line1\nLine2\nLine3\n")

  handle = File.open(path, "r")
  line1 = File.readLine(handle)
  line2 = File.readLine(handle)
  File.close(handle)
  File.remove(path)

  line1 == "Line1\n" && line2 == "Line2\n"
}

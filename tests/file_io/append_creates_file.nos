# Append to nonexistent file should create it
# expect: true

main() = {
  path = "/tmp/nostos_test_append_create.txt"

  # Make sure file doesn't exist (ignore error if not found)
  try { { File.remove(path) } } catch { _ -> () }

  # Append should create the file
  File.append(path, "Created by append")

  data = File.readAll(path)
  File.remove(path)
  data == "Created by append"
}

# List directory contents
# expect: true

main() = {
  dir = "/tmp/nostos_test_dir_list"

  Dir.createAll(dir)
  File.writeAll(dir ++ "/file1.txt", "a")
  File.writeAll(dir ++ "/file2.txt", "b")
  Dir.create(dir ++ "/subdir")

  entries = Dir.list(dir)
  Dir.removeAll(dir)

  # Should have 3 entries
  len(entries) == 3
}

len([]) = 0
len([_ | rest]) = 1 + len(rest)

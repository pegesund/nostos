# expect: <div><div id="card" data-component="true"><div><div id="card-title" data-component="true"><h2>Alice</h2></div><div id="card-status" data-component="true"><span>online</span></div></div></div></div>
# Nested components with reactive data

use stdlib.rhtml.*

reactive User = { name: String, status: String }

main() = {
    user = User("Alice", "online")
    cardTitle = () => RHtml(h2(user.name))
    cardStatus = () => RHtml(span(user.status))
    card = () => RHtml(div([
        component("card-title", cardTitle),
        component("card-status", cardStatus)
    ]))
    result = RHtml(div([component("card", card)]))
    renderRHtml(result)
}

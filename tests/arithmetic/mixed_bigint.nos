# expect: 0
# Test compile-time int-to-BigInt coercion for mixed numeric operations

main() = {
    # BigInt * Int = BigInt
    assert_eq(6n, 2n * 3)
    assert_eq(6n, 3 * 2n)

    # BigInt + Int = BigInt
    assert_eq(15n, 10n + 5)
    assert_eq(15n, 5 + 10n)

    # BigInt - Int = BigInt
    assert_eq(80n, 100n - 20)
    assert_eq(-80n, 20 - 100n)

    # BigInt / Int = BigInt
    assert_eq(5n, 10n / 2)
    assert_eq(5n, 10 / 2n)

    # Large BigInt operations
    assert_eq(2000000000000000000n, 1000000000000000000n * 2)
    assert_eq(999999999999999999n, 1000000000000000000n - 1)

    # Chained operations
    assert_eq(30n, 10n + 5 + 15)
    assert_eq(60n, 2n * 3 * 10)
    0
}

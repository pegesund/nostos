# expect: 42
# Lists inside tuples

sumBoth((lst1, lst2)) = sumList(lst1) + sumList(lst2)

sumList([]) = 0
sumList([h | t]) = h + sumList(t)

firstOfBoth(([a | _], [b | _])) = (a, b)
firstOfBoth(_) = (0, 0)

main() = {
    assert_eq(21, sumBoth(([1, 2, 3], [4, 5, 6])))
    assert_eq(6, sumBoth(([1, 2, 3], [])))
    assert_eq((1, 4), firstOfBoth(([1, 2], [4, 5])))
    assert_eq((0, 0), firstOfBoth(([], [1])))
    42
}

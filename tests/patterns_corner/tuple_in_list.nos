# expect: 42
# Tuples inside lists

sumPairs([]) = 0
sumPairs([(a, b) | rest]) = a + b + sumPairs(rest)

firstPair([(a, b) | _]) = (a, b)
firstPair([]) = (0, 0)

main() = {
    assert_eq(0, sumPairs([]))
    assert_eq(3, sumPairs([(1, 2)]))
    assert_eq(10, sumPairs([(1, 2), (3, 4)]))
    assert_eq((1, 2), firstPair([(1, 2), (3, 4)]))
    assert_eq((0, 0), firstPair([]))
    42
}
